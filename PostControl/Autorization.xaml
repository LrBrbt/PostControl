<Window x:Class="PostControl.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostControl"
        mc:Ignorable="d"
        Title="Журналы" Height="820" Width="1500" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="CanMinimize">

    <Grid>

        <Border Background="#000000" RenderTransformOrigin="0.5,0.5" Height="50" VerticalAlignment="Top">
            <Label Content="Журналы" Foreground="White" FontSize="30" FontFamily="VAG World" Margin="10,-10,-10,0"/>
        </Border>
        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" Width="650" Height="550" Fill="#565656" RadiusX="45" RadiusY="45"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="650" Height="550">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="60" FontFamily="VAG World" Foreground="White" Height="95"/>
            <Separator Style="{DynamicResource SeparatorMonoStyle}" Height="50"/>
            <Grid>
                <TextBox x:Name="loginTxt" Style="{DynamicResource TextBoxMonoStyle}" Text="Логин" HorizontalContentAlignment="Center" FontSize="40"/>
                <Rectangle Fill="#D7D7D7" RadiusX="40" RadiusY="40" Width="100" HorizontalAlignment="Left" Margin="50,0,0,0"/>
                <Image Height="70" Width="70" Source="/Images/user.png" Margin="65,15,515,15" Stretch="UniformToFill"/>
            </Grid>
            <Separator Style="{DynamicResource SeparatorMonoStyle}"/>
            <Grid>
                <PasswordBox x:Name="PasswordTxt" Style="{DynamicResource PasswordBoxMonoStyle}" Password="Пароль" HorizontalContentAlignment="Center" FontSize="40"/>
                <Rectangle Fill="#D7D7D7" RadiusX="40" RadiusY="40" Width="100" HorizontalAlignment="Left" Margin="50,0,0,0"/>
                <Image  Height="70" Width="70" Source="/Images/lock.png" Stretch="Fill" Margin="65,15,515,15"/>
            </Grid>
            <Separator Style="{DynamicResource SeparatorMonoStyle}" Height="3"/>
            <Button x:Name="forgetPasswordBtn" Content="Забыли пароль?" FontFamily="VAG World" Foreground="#D7D7D7" Background="Transparent" 
                     FontSize="25" BorderBrush="Transparent" Width="230" Height="43"/>
            <Separator Style="{DynamicResource SeparatorMonoStyle}" Height="35"/>
            <Button x:Name="enterBtn" Style="{DynamicResource ButtonMonoStyle}" Content="Войти" FontSize="40"/>
        </StackPanel>
        <Button x:Name="exitBtn" Content="X"  Margin="1391,0,0,770" Style="{DynamicResource exitBtnStyle}" FontWeight="Bold" Click="exitBtn_Click"/>
    </Grid>
</Window>
